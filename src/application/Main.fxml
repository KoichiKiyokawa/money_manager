<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <center>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="一覧">
			<VBox>
                  <children>
                     <HBox alignment="CENTER">
                        <children>
                           <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="80.0" text="カテゴリ">
                              <font>
                                 <Font size="18.0" />
                              </font>
                              <HBox.margin>
                                 <Insets right="10.0" />
                              </HBox.margin>
                           </Label>
                           <ComboBox fx:id="category" minWidth="160.0" promptText="選択してください..." />
                        </children>
                        <VBox.margin>
                           <Insets bottom="10.0" top="10.0" />
                        </VBox.margin>
                     </HBox>
                     <HBox alignment="CENTER">
                        <children>
                           <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="80.0" text="品目">
                              <font>
                                 <Font size="18.0" />
                              </font>
                              <HBox.margin>
                                 <Insets right="10.0" />
                              </HBox.margin>
                           </Label>
                           <TextField fx:id="item" minWidth="160.0" />
                        </children>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </HBox>
                     <HBox alignment="CENTER">
                        <children>
                           <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="80.0" text="金額">
                              <font>
                                 <Font size="18.0" />
                              </font>
                              <HBox.margin>
                                 <Insets right="10.0" />
                              </HBox.margin>
                           </Label>
                           <TextField fx:id="price" minWidth="160.0" />
                        </children>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </HBox>
                     <HBox alignment="CENTER">
                        <children>
                           <Button fx:id="addBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleAddBtnClick" text="追加" />
                        </children>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </HBox>
                     <TableView fx:id="history" prefHeight="200.0">
                       <columns>
                         <TableColumn fx:id="categoryCol" minWidth="-Infinity" prefWidth="-1.0" text="カテゴリ" />
                         <TableColumn fx:id="itemCol" minWidth="-Infinity" prefWidth="-1.0" text="品目" />
                           <TableColumn fx:id="priceCol" minWidth="-Infinity" prefWidth="-1.0" text="金額" />
                       </columns>
                        <columnResizePolicy>
                           <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                     </TableView>
                  </children></VBox>
          </Tab>
          <Tab text="グラフ" />
        </tabs>
      </TabPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
